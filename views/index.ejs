<%- include("templates/header", {tituloWeb: 'Pagina de Inicio'}) %>
   <div>
      <h2 class="text-center mt-5">Bienvenido</h2>
      <p class="text-light text-center">Descripcion de ASAL</p>
   </div>
   <div>
      <h3 class="text-center mt-5">Publicaciones m√°s relevantes</h3>
      <div style="background-color: rgba(0, 0, 0, 0.2);">
         <div class="container">
            <% if (typeof publicaciones !== 'undefined') { %>
               <% if (publicaciones.length > 0) { %>
                  <% publicaciones.forEach( publicacion => { %>
                     <div class="row ">
                        <div class="col p-2 d-flex flex-row justify-content-around mb-3" >
                           <div class="iamgen" style="width: 20rem">
                              <img src=<%= publicacion.Media %> class="card-img-top" alt="Media">
                           </div>
                           <div class="">
                              <div class="text-center"><a href="/ver-publicacion/<%= publicacion.Cedula %>/<%= rol %>" class="text-dark" style="text-decoration: none" ><%= publicacion.Titulo %></a></div>
                              <div class="">
                                 <div class="col m-1"><%= publicacion.Contenido %></div>
                                 <div class="col m-1">Fecha: <%= publicacion.CreatedDate %></div>
                                 <div class="col m-1">Autor: <%= publicacion.Nombre %> <%= publicacion.Apellido %> / C.I: <%= publicacion.Cedula %></div>
                                 <div class="col m-1 mt-3 text-end"><i class="fa-solid fa-eye"></i> <%= publicacion.Contador %></div>
                              </div>
                           </div>
                           <div class="d-flex" style="align-items: center">
                              <div class="nav justify-content-around">
                                 <a href="/ver-publicacion/<%= publicacion.Cedula %>/<%= rol %>" class="btn btn-primary"> Ver </a>
                              </div>
                           </div>
                        </div>
                     </div>
                  <% }) %>
               <% } else {%>
                  <div class="container">No hay publicaciones creadas</div>
               <% } %>
            <% } else { %>
               <div class="container">No hay publicaciones para ver</div>
            <% } %>
         </div>
      </div>
   </div>
</body>
<%- include("templates/footer") %>